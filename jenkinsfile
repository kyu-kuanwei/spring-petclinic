pipeline {
    agent any
    stages {
        stage("Build") {
            agent any
            steps {
                sh './mvnw clean package'
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'
                }
            }
        }

        stage("Copy Artifact") {
            steps {
                script {
                    step ([$class: 'CopyArtifact',
                    projectName: env.JOB_NAME,
                    filter: "target/*.jar",
                    buildNumber: env.BUILD_NUMBER,
                    target: 'artifact']);
                }
            }
        }

        // stage('Deploy Ansible') {
        //     steps {
        //         ansiblePlaybook playbook: 'main.yaml'
        //     }
        // }
    }
}