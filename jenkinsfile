pipeline {
  agent any
  stages {
    stage("Build") {
      agent any
      steps {
        withSonarQubeEnv('sonar_qube') {
          sh './mvnw clean package'
        }
      }
    }
    stage("SonarQube analysis") {
      agent any
      steps {
        withSonarQubeEnv('sonar_qube') {
          sh './mvnw sonar:sonar'
        }
      }
    }
    stage("Publish") {
      agent any
      steps {
        post {
          success {
            archiveArtifacts 'target/*.jar'
          }
        }
      }
    }
  }
}