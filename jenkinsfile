pipeline {
    agent any
    stages {
        stage("Build") {
            agent any
            steps {
                sh './mvnw clean package'
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'
                }
            }
        }

        stage("Copy Artifact") {
            steps {
                echo(env.JOB_NAME);
            }
        }

        // stage('Deploy Ansible') {
        //     steps {
        //         ansiblePlaybook playbook: 'main.yaml'
        //     }
        // }
    }
}
